{
  "compilerOptions": {
    "module": "ESNext",                  // Enables ES module syntax
    "moduleResolution": "node",          // Uses Node.js-style module resolution
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
